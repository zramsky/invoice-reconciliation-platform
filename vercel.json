{
  "name": "invoice-reconciliation-frontend",
  "version": 2,
  "public": true,
  "cleanUrls": true,
  "trailingSlash": false,
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/add-vendor",
      "dest": "/frontend/add-vendor.html"
    },
    {
      "src": "/vendor-profile",
      "dest": "/frontend/vendor-profile.html"
    },
    {
      "src": "/test",
      "dest": "/frontend/test.html"
    },
    {
      "src": "/simple",
      "dest": "/frontend/simple.html"
    },
    {
      "src": "/frontend/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/frontend/(.*\\.(js|css|html|json))$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ]
}