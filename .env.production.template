# PRODUCTION Environment Configuration Template
# Copy to .env.production and fill in actual values
# CRITICAL: Never commit actual production values to git

# === SECURITY - MUST CHANGE ALL VALUES ===
SECRET_KEY=CHANGE_THIS_TO_STRONG_RANDOM_KEY_MIN_32_CHARS
ENCRYPTION_MASTER_KEY=CHANGE_THIS_TO_BASE64_ENCODED_32_BYTE_KEY
JWT_SECRET_KEY=CHANGE_THIS_TO_STRONG_JWT_SECRET
SESSION_SECRET=CHANGE_THIS_TO_STRONG_SESSION_SECRET
BACKUP_ENCRYPTION_KEY=CHANGE_THIS_TO_BACKUP_ENCRYPTION_KEY

# === APPLICATION SETTINGS ===
FLASK_ENV=production
FLASK_DEBUG=False
SERVER_HOST=0.0.0.0
SERVER_PORT=5000

# === SECURITY SETTINGS ===
SECURE_COOKIES=True
REQUIRE_HTTPS=True
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
ENABLE_MFA=True

# === DATABASE ===
# For production, use PostgreSQL instead of SQLite
DATABASE_URL=postgresql://user:password@localhost:5432/unspend_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# === REDIS (for sessions and caching) ===
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=CHANGE_THIS_TO_REDIS_PASSWORD

# === API KEYS ===
OPENAI_API_KEY=your-production-openai-key

# === FIREBASE ===
FIREBASE_PROJECT_ID=unspend-91424
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=unspend-91424.firebaseapp.com

# === MONITORING ===
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=WARNING
ENABLE_METRICS=True
METRICS_PORT=9090

# === BACKUP & DISASTER RECOVERY ===
AWS_S3_BUCKET=unspend-backups-prod
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
BACKUP_RETENTION_DAYS=90

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=True
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# === CORS ===
CORS_ORIGINS=https://unspend-91424.web.app,https://unspend-91424.firebaseapp.com

# === FILE UPLOAD ===
MAX_FILE_SIZE=5242880
UPLOAD_FOLDER=/var/app/uploads
PROCESSED_FOLDER=/var/app/processed

# === NOTIFICATIONS ===
SLACK_WEBHOOK=https://hooks.slack.com/services/your-webhook
SMTP_SERVER=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-sendgrid-api-key